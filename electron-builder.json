{
    "asar": true,
    "appId": "com.beatsaver.client",
    "productName": "BeatSaver",
    "files": ["dist/**/*"],
    "directories": {
        "output": "release/"
    },
    "publish": [
        {
            "provider": "github",
            "owner": "dotMortis",
            "repo": "beat-saver-client"
        }
    ],
    "win": {
        "icon": "assets/icons",
        "target": ["nsis"],
        "executableName": "BeatSaver",
        "artifactName": "BeatSaverClient v${version} Installer.exe",
        "publisherName": "dotMortis"
    },
    "nsis": {
        "oneClick": false,
        "allowToChangeInstallationDirectory": true,
        "allowElevation": false,
        "perMachine": true
    },
    "portable": {
        "splashImage": "assets/icons/splash.bmp",
        "artifactName": "BeatSaverClient v${version} Portable.exe"
    },
    "mac": {
        "icon": "assets/icons",
        "target": ["dmg"]
    },
    "linux": {
        "icon": "assets/icons",
        "target": ["AppImage"]
    }
}
