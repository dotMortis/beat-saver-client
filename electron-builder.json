{
    "asar": true,
    "appId": "com.beatsaver.ui",
    "productName": "BeatSaverClient",
    "files": ["dist/**/*"],
    "directories": {
        "output": "release/"
    },
    "win": {
        "icon": "assets/icons",
        "target": ["portable"]
    },
    "portable": {
        "splashImage": "assets/icons/electron.bmp"
    },
    "mac": {
        "icon": "assets/icons",
        "target": ["dmg"]
    },
    "linux": {
        "icon": "assets/icons",
        "target": ["AppImage"]
    }
}
